---
interface Props {
    sectionName: string;
}

const { sectionName } = Astro.props;
---

<div class="flex flex-1 w-full flex-col border-x h-full border-stroke">
    <div
        class="px-4 py-2 border-r border-stroke w-fit flex gap-16 items-center cursor-default"
    >
        <p class="text-foreground">{sectionName}</p>
        <p class="text-foreground text-sm">X</p>
    </div>
    <div class="w-full h-full flex-1 border-t border-stroke min-h-0 overflow-auto">
        <slot />
    </div>
</div>
