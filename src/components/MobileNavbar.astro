<div class="absolute bg-slate-900 left-0 right-0 h-full opacity-0 z-10 transition-all duration-300 ease-in pointer-events-none lg:hidden" id="mobile-navigation">
    <div class="p-2 border-b border-stroke">
        <h2 class="text-lg text-foreground "># navigate</h2>
    </div>
    <div class="flex flex-col gap-2">
        <a href="/" class="px-4 py-2 border-b border-stroke">_home</a>
        <a href="/about-me/bio" class="px-4 py-2 border-b border-stroke">_about-me</a>
        <a href="/projects" class="px-4 py-2 border-b border-stroke">_projects</a>
        <a href="/about-me/contact" class="px-4 py-2 border-b border-stroke">_contact-me</a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const mobileNavbar = document.getElementById("mobile-navigation");

        const openNavbarButton = document.getElementById("open-navbar");
        const closeNarvbarButton = document.getElementById("close-navbar");

        /**
         * Open the navbar mobile menu
         */
        const onOpenNavbar = () => {
            openNavbarButton?.classList.add("hidden");
            openNavbarButton?.classList.remove("block");

            closeNarvbarButton?.classList.remove("hidden");
            closeNarvbarButton?.classList.add("block");

            mobileNavbar?.classList.remove("pointer-events-none")
            mobileNavbar?.classList.remove("opacity-0");
            mobileNavbar?.classList.add("opacity-100");
        }

        /**
         * Close the navbar mobile menu
         */
        const onCloseNavbar = () => {
            openNavbarButton?.classList.add("block");
            openNavbarButton?.classList.remove("hidden");

            closeNarvbarButton?.classList.remove("block");
            closeNarvbarButton?.classList.add("hidden");

            mobileNavbar?.classList.remove("opacity-100");
            mobileNavbar?.classList.add("opacity-0");
            mobileNavbar?.classList.add("pointer-events-none");
        }

        openNavbarButton?.addEventListener("click", onOpenNavbar);
        closeNarvbarButton?.addEventListener("click", onCloseNavbar);
    });


</script>
