---
import LeftNavbar from "../../components/about_me/LeftNavbar.astro";
import Layout from "../../layouts/Layout.astro";

interface Props {
    sectionName: string;
}

const {sectionName} = Astro.props;
---

<Layout>
    <div class="flex h-full w-full bg-background flex-1 min-h-0">
        <LeftNavbar />
        <div class="h-full w-full flex-1 flex flex-col min-h-0">
            <div class="flex flex-col border-b border-stroke">
                <div class="px-4 py-2 border-r border-stroke w-fit flex gap-16 items-center cursor-default">
                    <p class="text-foreground">{sectionName}</p>
                    <p class="text-foreground text-sm ">X</p>
                </div>
            </div>
            <slot />
        </div>
    </div>
</Layout>