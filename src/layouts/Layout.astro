---
import Footer from "../components/Footer.astro";
import MobileNavbar from "../components/MobileNavbar.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Fira+Code:wght@300..700&display=swap" rel="stylesheet">

		<title>Miguel Portfolio</title>
	</head>
	<body>
		<div id="background"></div>
		<main id="content" class="w-full h-full flex flex-col" >
			<Navbar />

			<div class="h-full w-full flex flex-1 min-h-0 relative">
				<MobileNavbar />
				<slot />

			</div>
			<Footer />
		</main>

	</body>
</html>

<style>

	body, html {
		height: 100%;
		width: 100%;
		font-family: "Fira Code", "Courier New", monospace;
	}

	#background {
		position: absolute;
		inset: 0;
		background: radial-gradient(circle at 70% 40%, rgba(0, 255, 200, 0.2), transparent 30%),
					radial-gradient(circle at 80% 80%, rgba(100, 0, 255, 0.2), transparent 30%),
					#0d1321;
		z-index: -1;
	}

	#content {
		z-index: 0;
		color: #fff;
	}
</style>
